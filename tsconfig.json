{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./packages",
    "outDir": "./dist",
    "paths": {
      "@spec-validator/validator/*": ["validator/src/*"],
      "@spec-validator/validator": ["validator/src/index.ts"],
      "@spec-validator/rest-api-server/*": ["rest-api-server/src/*"],
      "@spec-validator/rest-api-server": ["rest-api-server/src/index.ts"],
      "@spec-validator/open-api-endpoint/*": ["open-api-endpoint/src/*"],
      "@spec-validator/open-api-endpoint": ["open-api-endpoint/src/index.ts"]
    }
  }
}
