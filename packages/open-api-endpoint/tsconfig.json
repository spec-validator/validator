
{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "composite": true,
    "paths": {
      "@validator/validator/*": ["../validator/src/*"],
      "@validator/validator": ["../validator/src/index.ts"],
      "@validator/rest-api-server/*": ["../rest-api-server/src/*"],
      "@validator/rest-api-server": ["../rest-api-server/src/index.ts"]
    }
  },
  "references": [
    { "path": "../validator" },
    { "path": "../rest-api-server" }
  ],
  "include": ["src/**/*.ts"]
}
